{
  "name": "@olton/hooks",
  "version": "0.13.0",
  "description": "The set of js hooks.",
  "type": "module",
  "main": "dist/hooks.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "shx rm -rf dist/* lib/*",
    "build": "npm run clean && cross-env MODE=production node build.js",
    "dev": "npm run clean && cross-env MODE=development node build.js",
    "pub": "npm publish --access public",
    "test": "cross-env NODE_OPTIONS=\"--import tsx\" easytest --verbose --include=__tests__/*.test.ts",
    "lint": "biome lint --write ./src"
  },
  "keywords": [
    "js",
    "javascript",
    "state",
    "event",
    "memo",
    "debounce",
    "throttle",
    "pipe",
    "compose",
    "curry"
  ],
  "author": {
    "name": "Serhii Pimenov",
    "email": "serhii@pimenov.com.ua"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@olton/easytest": "^0.41.1",
    "@olton/esbuild-plugin-progress": "^0.3.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0",
    "esbuild-plugin-replace": "^1.4.0",
    "shx": "^0.3.4",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
